{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",

  // Logo
  "logo": {
    "type": "kitty",
    "source": "~/.config/fastfetch/girx.jpg",
    "height": 20
  },
  // Modules with custom dividers and breaks
  "modules": [

    "break",
    // System Info Section
    {
      "type": "custom",
      "format": "──────── System Info ────────"
    },
    {
      "key": "󰻀 OS",
      "type": "os",
      "format": "{pretty-name}" // Simplified OS info
    },
    {
      "key": "󰒓 Kernel",
      "type": "kernel",
      "format": "{sysname} {release}" // Only displays the version
    },
    {
      "key": "󰌢 Host",
      "type": "host",
      "format": "{version}" // Only displays the model without serial
    },
    {
      "key": "󱂬 WM",
      "type": "wm",
      "format": "{pretty-name}"
    },
    {
      "key": "󱑒 Uptime",
      "type": "uptime"
    },
    

    // Hardware Section
    "break",
    {
      "type": "custom",
      "format": "─────── Hardware Info ───────"
    },
    {
      "key": "󰘚 CPU",
      "type": "cpu",
      "format": "{name}" // Simplified CPU info
    },
    {
      "key": "󰢮 GPU",
      "type": "gpu",
      "format": "{vendor} {name}" // Less verbose GPU info
    },
    {
      "key": "󰍛 Memory",
      "type": "memory",
      "format": "{used} / {total}" // Memory without percentage
    },
    {
      "key": "󰆓 Disk",
      "type": "disk",
      "format": "{size-used} / {size-total}" // Disk without percentage
    },
    {
      "key": "󰁹 Battery",
      "type": "battery",
      "format": "{capacity-bar}"
    },


    // Shell Section
    "break",
    {
      "type": "custom",
      "format": "───────── Shell Info ────────"
    },
    {
      "key": "󰞷 Shell",
      "type": "shell"
    },
    {
      "key": "󰆍 Terminal",
      "type": "terminal"
    },
    {
      "key": "󰏗 Packages",
      "type": "packages"
    },
    

    // Network Section
    "break",
    {
      "type": "custom",
      "format": "──────── Network Info ───────"
    },
    { "key": "󰖩 Wifi",
      "type": "wifi",
      "format": "{status} {signal-quality-bar}" // Simplified local IP info
    },
    {
      "key": "󰂳 Bluetooth",
      "type": "bluetooth",
      "format": "{connected}" // Only displays the public IP
    }
  ]
}
